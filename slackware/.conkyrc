background yes
use_xft yes
xftfont Vibrocentric:size=8
xftalpha 3.0

update_interval 1.0
total_run_times 0
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

minimum_size 1350 0  

own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
own_window_colour 242424

double_buffer yes
#no_buffers no
default_color darkgreen
color1 eeeeee
alignment top_left
imlib_cache_size 0

gap_x 8
gap_y 6

